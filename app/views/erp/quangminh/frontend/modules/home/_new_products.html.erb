<div class="ss-carousel ss-owl">
    <div class="owl-carousel" data-nav="true" data-margin="30" data-autoplay="false" data-autospeed="10000" data-speed="300" data-column1="4" data-column2="4" data-column3="3" data-column4="2" data-column5="1">
        <div class="item">
            <% count = 8 %>
            <% (0..7).each_with_index do |product, index| %>
            <div class="product-item">
                <div class="product-item-container grid-view-item   ">
                    <div class="left-block">
                        <div class="product-image-container product-image">
                            <a class="grid-view-item__link image-ajax" href="<%= erp_quangminh.product_detail_path %>">
                                <%= image_tag '/quangminh/img/products/product-270x270.jpg', alt: '', class: 'img-responsive' %>
                                <span class="second-img hidden-sm hidden-xs">
                                    <%= image_tag '/quangminh/img/products/product-02-270x270.jpg', alt: '', class: 'img-responsive s-img' %>
                                </span>
                            </a>
                            <div class="label-info">
                                <span class="label-stock label label2  font-ct">Mới 2018</span>
                            </div>
                        </div>
                        <span class="label-product label-sale">-10%</span>
                        <span class="label-product label-new">Mới</span>
                    </div>
                    <div class="right-block">
                        <div class="caption">
                            <h4 class="title-product"><%= link_to 'Tủ thờ đứng', erp_quangminh.product_detail_path, title: '', class: 'product-name' %></h4>
                            <div class="price">
                                <span class="visually-hidden">Giá:</span>
                                <span class="price-new">
                                    <span class='money'>1.500.000 VNĐ</span>
                                </span>
                                <span class="price-old">
                                    <span class="money">1.800.000 VNĐ</span>
                                </span>
                            </div>
                        </div>
                        <div class="button-link">
                            <div class="btn-button add-to-cart action  ">
                                <a class="btn-addToCart grl btn_df" href="<%= erp_quangminh.product_detail_path %>">
                                    <i class="fa fa-eye"></i>
                                    <span>Xem chi tiết sản phẩm</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%= '</div><div class="item">'.html_safe if index%2 == 1 && index+1 != count %>
            <% end %>
        </div>                              
    </div>
</div>                