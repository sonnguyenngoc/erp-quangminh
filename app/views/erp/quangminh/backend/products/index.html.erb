<% content_for :title do %>
    <%= t('.products') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-th"></i> <%= t('.products') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_quangminh.new_backend_product_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_quangminh.list_backend_products_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_quangminh_products.name'
        }
    ],
    actions: [
    ],
    filters: [
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.price'), name: 'price', value: true, checked: true
        },
        {
            text: t('.stock'), name: 'stock', value: true, checked: true
        },
        {
            text: t('.product_category'), name: 'product_category', value: true, checked: true
        },
        {
            text: t('.status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: true
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_quangminh_products.created_at', sort_direction: 'desc' }
) %>