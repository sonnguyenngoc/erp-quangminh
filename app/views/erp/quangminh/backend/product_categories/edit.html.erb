<% content_for :title do %>
    <%= @product_category.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_quangminh.backend_product_categories_path %>">
    <i class="fa fa-th"></i> <%= t('.product_categories') %>
    </a> / <%= @product_category.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_quangminh.new_backend_product_category_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @product_category.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', product_category: @product_category %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>