<% content_for :title do %>
    <%= @blog_category.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_quangminh.backend_blog_categories_path %>">
    <i class="fa fa-newspaper"></i> <%= t('.blog_categories') %>
    </a> / <%= @blog_category.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_quangminh.new_backend_blog_category_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @blog_category.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', blog_category: @blog_category %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>