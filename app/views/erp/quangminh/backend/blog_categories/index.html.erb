<% content_for :title do %>
    <%= t('.blog_categories') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-newspaper"></i> <%= t('.blog_categories') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_quangminh.new_backend_blog_category_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_quangminh.list_backend_blog_categories_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_quangminh_blog_categories.name'
        },
        {
            text: t('.parent_category'),
            name: 'parents_erp_quangminh_blog_categories.name',
            select: {
                name: 'parents_erp_quangminh_blog_categories.id',
                data_url: erp_quangminh.dataselect_backend_blog_categories_path
            }
        }
    ],
    actions: [
    ],
    filters: [
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: true
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_quangminh_blog_categories.created_at', sort_direction: 'desc' }
) %>